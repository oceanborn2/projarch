<requirement name="PostgreSQL">
  <license-type>GPL</license-type>
  <description>Open source database management system. Supports transactions and blobs</description>
  <download>www.postgresql.org</download>
  <min-version>7.1.3</min-version>
  <build-depend>Staging phase : database creation</build-depend>
  <application-depend>The database used by the Project Architect</application-depend>
  <configure-command>./configure --prefix=/opt/postgres --enable-locale --enable-recode --with-tcl --with-perl --with-python --with-java --with-openssl --with-CXX --enable-syslog --with-gnu-ld --with-libraries=/usr/local/ActivePerl-5.6/lib/5.6.1/i686-linux-thread-multi-ld/CORE</configure-command>
</requirement>
